<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.employer.EmployerModeAcceptedListActivity">

  <TextView
      android:id="@+id/accepted_workers_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/accepted_workers_title"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.057" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/accepted_employee_list_recycler_view"
      android:layout_width="359dp"
      android:layout_height="512dp"
      android:layout_marginTop="28dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/accepted_workers_title" />
</androidx.constraintlayout.widget.ConstraintLayout>